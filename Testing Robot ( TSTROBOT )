/* package codechef; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner s = new Scanner(System.in);
		int t= s.nextInt();
		while(t-->0){
		    int n = s.nextInt();
		    int x = s.nextInt();
		    String st = s.next();
		    int arr[] = new int[n+1];
		    arr[0] = x;
		    for(int i = 0;i<n;i++){
		        if(st.charAt(i)=='R'){
		            x=x+1;
		        }else{
		            x=x-1;
		        }
		        arr[i+1]=x;
		    }
		    Arrays.sort(arr);
		    int count =1;
		    for(int i = 0;i<arr.length-1;i++){
		        if(arr[i]==arr[i+1]){
		            continue;
		        }else{
		            count++;
		        }
		    }
		    System.out.println(count);
		}
	}
}
